<%- include partials/head.ejs %>

<div class="container">
    <article class="card-body mx-auto" style="max-width: 400px;">
    <form  class="form-horizontal" role="form" method="post" action="/send">
                       
      <div class="form-group input-group">
          <div class="input-group-prepend">
          </div>
              <textarea id="handle" type="text" class="form-control" name="msg" placeholder="Paste link" required></textarea>
          </div>


              <div class="input-group-prepend">
                  <input id="handle" type="text" class="form-control" name="username" placeholder="Enter receiver username" required>
              </div>
              <br>  <button type="submit" class="btn btn-primary btn-block"> Send  </button>
          
      </form>
    </article>
    <hr>

  <table class="table  table-dark table-striped">       
   <% if (items.length > 0) {%>
    <thead class="thead-dark">
      <tr>
          <th style="width: 50%;">Message</th>
          <th style="width: 20%;">From</th>
          <th style="width: 30%;">Time</th>
        </tr>
      </thead>
      <tbody>
        <% for(let item of items) { %>
                <tr>
                    <td><a href="<%= item.Text %>"><%= item.Text %></a></td>
                    <td><%= item.From %></td>
                    <td><%= item.DateTime %></td>
                  </tr>
                         
      <% }; %>
    </tbody>
  </table>

<% } else { %>
  <p class="text-center">No items found.</p>
<% } %>

 </div>
 
 <br><br><br><br><br><br>
<%- include partials/foot %>